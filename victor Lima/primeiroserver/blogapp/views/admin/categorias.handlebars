<h2>Lista de categorias:</h2>
<hr >
<a href="/admin/categorias/add"><br>
<button class="btn btn-sucess">Nova categorias: </button>
</a>

{{#each categorias}}        
 <div class="card m-4">
    <div class="card-body">

        <h4>{{name}}</h4>

        <p>{{slug}}</p>
        <span class="card-text">{{date}}</span>
        <div class="mt-4">

        <a href="/admin/categorias/edit/{{_id}}"
        >
        <button class="btn btn-success">Editar Categoria</button>

        <form action="/admin/categorias/deletar" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button class="btn btn-danger mt-2">Deletar Categoria</button>
        </form>
        </a>
        </div>
    </div>
 </div>
{{else}}
  <h4>Nenhuma categoria registrada</h4>
{{/each}}
